{
  "hooks": {
    "PreToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/project-scope-enforcement.js",
        "timeout": 5000
      }, {
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/git-privacy-enforcement.js",
        "timeout": 5000
      }, {
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/summary-file-enforcement.js",
        "timeout": 5000
      }, {
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/agent-infrastructure-protection.js",
        "timeout": 5000,
        "description": "CRITICAL: Block destructive infrastructure commands for all contexts"
      }, {
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/pm-constraints-enforcement.js",
        "timeout": 5000
      }]
    }],
    "UserPromptSubmit": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/context-injection.js",
        "timeout": 15000,
        "failureMode": "allow"
      }]
    }],
    "SubagentStop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/subagent-stop.js",
        "timeout": 5000,
        "failureMode": "allow"
      }]
    }]
  }
}