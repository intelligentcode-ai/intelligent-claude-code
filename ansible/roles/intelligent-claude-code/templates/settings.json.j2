{
  "hooks": {
    "PreToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/pretooluse.js",
        "timeout": 5000
      }]
    }],
    "SessionStart": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/session-start.js",
        "timeout": 10000,
        "failureMode": "allow"
      }]
    }],
    "UserPromptSubmit": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node {{ claude_install_path }}/hooks/user-prompt-submit.js",
        "timeout": 15000,
        "failureMode": "allow"
      }]
    }]
  }
}