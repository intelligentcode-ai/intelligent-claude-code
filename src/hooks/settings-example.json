{
  "hooks": {
    "PreToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node ~/.claude/hooks/pre-tool-use.js",
        "timeout": 15000,
        "failureMode": "allow"
      }]
    }],
    "PostToolUse": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node ~/.claude/hooks/post-tool-use.js",
        "timeout": 5000,
        "failureMode": "continue"
      }]
    }]
  }
}